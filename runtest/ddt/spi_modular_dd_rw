# @name 
#	SPI modular read write test 
# @desc 
#       modprobe spi module first and then do RW and then rmmod it
# @requires  spi_master 

SPI_L_MODULAR_RW_JFFS2 source "common.sh"; install_modules.sh "spi"; do_cmd blk_device_modular_dd_rw.sh -f "jffs2" -b "1M" -c "10" -l "1" -d "spi"

#SPI_M_MODULAR_INSMOD_RW_RMMOD_0001 source "common.sh"; install_modules.sh "spi"; mod_name=`get_modular_name.sh "spi"` || die "error getting modular name"; do_cmd insmod.sh "$mod_name";    part=`get_mtd_partition_number.sh "spi"` || die "error getting mtd part number: $part"; size=`get_mtd_size.sh "$part"` || die "error getting mtd size: $size"; size=$(( $size/MB )) && size=`get_ceiling_divide.sh "$size" 10` || die "error getting divide ceiling"; do_cmd blk_device_dd_readwrite_test.sh -f "jffs2" -b "1M" -c "$size" -l "1" -d "spi";    do_cmd rmmod.sh "$mod_name" 

