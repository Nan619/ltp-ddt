NAND_FUNC_ERASE_0001 source common.sh;part=`get_mtd_partition_number.sh "nand"` || die "error getting mtd partition number"; erase_size=`get_mtd_erase_size.sh` || die "error getting erase_size" ;mtd_debug erase "/dev/mtd$part" 0 "$erase_size" && exit 0 || exit 1




